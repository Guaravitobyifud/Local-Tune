<body>
    <h1>Bem-vindo, {{username}}!</h1>

    {{#if profilePicture}}
        <img src="../uploads/{{profilePicture}}" alt="Imagem de Perfil">
        <h3>Alterar Foto de Perfil</h3>
        <form action="/auth/alterarFotoPerfil" method="POST" enctype="multipart/form-data">
            <input type="file" name="imagem" accept="image/*" required>
            <button type="submit">Alterar</button>
        </form>
    {{else}}
        <h3>Upload de Foto de Perfil</h3>
        <form action="/auth/uploadimg" method="POST" enctype="multipart/form-data">
            <input type="file" name="imagem" accept="image/*" required>
            <button type="submit">Enviar</button>
        </form>
    {{/if}}

    <!-- Restante do conteúdo da página -->
    {{{logout}}}
