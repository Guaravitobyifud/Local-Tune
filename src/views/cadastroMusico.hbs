<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>LocalTune</title>
    <link rel="icon" type="images/logo_topo.png" href="/images/logo_topo.png">
    <link href="/estilo.css" rel="stylesheet" type="text/css" />
    
    <link href="/cadastro.css" rel="stylesheet" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.12/jquery.mask.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanilla-masker@1.2.0"></script>

  window.onload = function() {
    var cellField = document.getElementById('cellfone');
    VMasker(cellField).maskPattern("(99) 99999-9999");

    var cpfField = document.getElementById('cpf');
    VMasker(cpfField).maskPattern("999.999.999-99");
  }
</script>
</head>

<body>
    <header>
        <button class="bo1" onclick="window.history.back()">Voltar</button>
        <div class="bo1">
            <a href="/cadastro" class="bo2">Cadastro</a>
        </div>
        <div class="bo1">
            <a href="/cadastroSTBL" class="bo2">Cadastro Estabelecimento</a>
        </div>
        <img src="/images/baixados.svg" class="logo">
    </header>
    <section class="cadastras">
        <div id="erroContainer" class="erroContainer"></div>
        <h1>Cadastro de Usuário</h1>
        <form action="/auth/cadastromusic" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required>
            <br>
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" required>
            <br>
            <label for="cellfone">Telefone:</label>
            <input type="text" id="cellfone" name="cellfone"required>
            <br>
            <label for="cellfone">Cidade:</label>
            <input type="text" id="Cidade" name="endereco"required>
            <br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <br>
            <label for="senha">Senha:</label>
            <input type="password" id="senhaM" name="senhaM" required>
            <br>
            <label for="senha2">Confirmar Senha:</label>
            <input type="password" id="senhaM2" name="senhaM2" required>
            <br>
            <label for="option">Gênero Musical:</label>
            <select name="option" id="">
                <option value="1">Rock</option>
                <option value="4">MPB</option>
                <option value="3">Samba</option>
                <option value="2">Jazz</option>
            </select>
            <button type="submit">Cadastrar</button>
        </form>
        <p class="message">{{message}}</p>
    </section>

</body>

</html>
