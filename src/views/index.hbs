  <script>
    function barra() {
    var menu = document.getElementById('menu-hamburguer');
    menu.classList.toggle('active');

    if (menu.classList.contains('active')) {
        document.getElementById("esquerda").style.width = "calc(40% - 100px)";
      document.getElementById("esquerda").style.background = "#FFD34D";
        document.getElementById("conteudo-barra").style.display = "block";
    } else {
        document.getElementById("esquerda").style.width = "60px";
      document.getElementById("esquerda").style.background = "#303440";
        document.getElementById("conteudo-barra").style.display = "none";
    }
}
// -=====================================================-

let isDragging = false;
let startDragX = 0;
let currentTransform = 0;

const carousel = document.querySelector('.carousel');
const dragItems = document.querySelectorAll('.drag-item');

dragItems.forEach(item => {
  item.addEventListener('mousedown', function(event) {
    // Impede ação padrão de drag do navegador
    event.preventDefault();
    isDragging = true;
    startDragX = event.clientX;
    document.addEventListener('mousemove', dragging);
  });
});

window.addEventListener('mouseup', function(event) {
  if (isDragging) {
    document.removeEventListener('mousemove', dragging);
    let dragDistance = event.clientX - startDragX;
    currentTransform += dragDistance;
    carousel.style.transform = `translateX(${currentTransform}px)`;
    isDragging = false;
  }
});

function dragging(event) {
  if (isDragging) {
    let dragDistance = event.clientX - startDragX;
    let newTransform = currentTransform + dragDistance;
    carousel.style.transform = `translateX(${newTransform}px)`;
  }
}
  </script>
