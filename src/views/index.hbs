 <section class="conteudo">
        <h1>Publicações Recentes</h1>
{{#each publicacoes}}
    <div class="publicacao_completa">
        <div class="publi-ft-perfil">
            <img src="{{usuario.fotoPerfilUri}}" class="img-perfil-publi">
            <p>{{usuario.nm_usuario}}</p>
        </div>
        <div id="carrosselPublicacao{{@index}}" class="carousel">
             <button class="carousel-control-prev" role="button">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            {{#each tb_publicacao.tb_publicacao_arquivos}}
                <div class="carousel-item {{#if @first}}active{{/if}}">
                    {{#if (eq this.tipo 'image')}}
                        <img src="{{this.dataUri}}" alt="Imagem da Publicação" class="publi_arq">
                    {{/if}}
                    {{#if (eq this.tipo 'video')}}
                        <video class="publicacao_video publi_arq" autoplay controlsList="nodownload">
                            <source src="{{this.dataUri}}" type="{{this.tipo_arquivo}}">
                            Seu navegador não suporta o elemento de vídeo.
                        </video>
                    {{/if}}
                </div>
            {{/each}}
             <button class="carousel-control-next" role="button">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
        <p>{{ds_publicacao}}</p>
    </div>
{{/each}}
    </section>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const prevButton = document.querySelector('.carousel-control-prev');
            const nextButton = document.querySelector('.carousel-control-next');
            const carouselInner = document.querySelector('.carousel-inner');
            const items = document.querySelectorAll('.carousel-item');
            let currentIndex = 0;

            if (items.length <= 1) {
                prevButton.classList.add('hidden');
                nextButton.classList.add('hidden');
            }

            function updateCarousel() {
                const offset = -currentIndex * 100;
                carouselInner.style.transform = `translateX(${offset}%)`;
            }

            prevButton.addEventListener('click', function() {
                if (currentIndex > 0) {
                    currentIndex--;
                } else {
                    currentIndex = items.length - 1;
                }
                updateCarousel();
            });

            nextButton.addEventListener('click', function() {
                if (currentIndex < items.length - 1) {
                    currentIndex++;
                } else {
                    currentIndex = 0;
                }
                updateCarousel();
            });

            updateCarousel();
        });
    </script>
    <script>
        async function toggleCurtida(cd_publicacao) {
            try {
                const response = await fetch(`/curtir/${cd_publicacao}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const data = await response.json();
                alert(data.message);
                // Atualize o estado do botão (curtido/não curtido) conforme necessário
                updateCurtidaButton(cd_publicacao);
            } catch (error) {
                console.error('Erro ao curtir/descurtir a publicação:', error);
            }
        }

        function updateCurtidaButton(cd_publicacao) {
            // Aqui você pode atualizar a aparência do botão com base na curtida
            const button = document.getElementById(`curtida-btn-${cd_publicacao}`);
            if (button) {
                button.textContent = button.textContent === 'Curtir' ? 'Descurtir' : 'Curtir';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Simulando a renderização de algumas publicações
            const publicacoes = [
                { cd_publicacao: 1, conteudo: 'Publicação 1' },
                { cd_publicacao: 2, conteudo: 'Publicação 2' },
                { cd_publicacao: 3, conteudo: 'Publicação 3' }
            ];

            const publicacoesContainer = document.getElementById('publicacoes');
            publicacoes.forEach(pub => {
                const publiDiv = document.createElement('div');
                publiDiv.innerHTML = `
                    <p>${pub.conteudo}</p>
                    <button id="curtida-btn-${pub.cd_publicacao}" onclick="toggleCurtida(${pub.cd_publicacao})">Curtir</button>
                `;
                publicacoesContainer.appendChild(publiDiv);
            });
        });
    </script>
