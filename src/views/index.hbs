<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LocalTune</title>
    <link rel="stylesheet" href="/estilo.css">
</head>
<body>
    <section class="lateral-menu" id="lateralMenu" {{#if menuHidden}}hidden{{/if}}>
        <div class="menu-header">
            <div id="menuButton" class="menu-button">x</div>
            <br>
            <h2 class="menu-titulo">LocalTune</h2>
        </div>
        <div class="menu-content">
            <div class="menu-item"><a href="/home">Home</a></div>
            <div class="menu-item"><a href="/Search">Pesquisar</a></div>
            <div class="menu-item"><a href="/settings">Configurações</a></div>
            <div class="menu-item"><a href="/about">Sobre</a></div>
        </div>
    </section>
    <header>
        <div class="text_left">
            <div id="openMenuButton" class="open-menu-button">☰</div>
            
        </div>
        <img src="/images/baixados.svg" class="logo">
        <div class="buscar">
            <div class="bo1"><a class="bo2" href="/login"><h3 class="bo3">Login</h3></a></div>
            <div class="bo1a"><a class="bo2" href="/cadastro"><h3 class="bo3">Cadastro</h3></a></div>
        </div>
    </header>
    {{!-- <div class="message">
        {{message}}
    </div> --}}
    <script>
        document.getElementById("openMenuButton").addEventListener("click", function() {
            var menu = document.getElementById("lateralMenu");
            menu.removeAttribute('hidden');
            setTimeout(() => menu.classList.add('show'), 10); // Delay to allow transition
        });

        document.getElementById("menuButton").addEventListener("click", function() {
            var menu = document.getElementById("lateralMenu");
            menu.classList.remove('show');
            menu.addEventListener('transitionend', function() {
                menu.setAttribute('hidden', '');
            }, { once: true });
        });
    </script>
</body>
</html>
